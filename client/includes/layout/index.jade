doctype html
<!--[if IE 8]>
<html lang="en" class="lt-ie9">
<![endif]-->
<!--[if gt IE 8]><!-->
<html lang="en">
<!--<![endif]-->
- var desc = ''
- var kw = ''

html.no-js
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    - var header = true;
    - var footer = true;
    - var highcharts = false;

    block title
      - var base = "/"
      - var title = 'Virgo'
    
    base(href='#{base}')
    title #{title}
    meta(name='Description', content='#{desc}')
    meta(name='Keywords', content='#{kw}')
    meta(name='viewport', content='width=device-width,maximum-scale=1.0,initial-scale=1.0, user-scalable=0,minimal-ui' )
    meta(name="renderer" content="webkit")
    meta(http-equiv="Cache-Control" content="no-cache")
    meta(http-equiv="Pragma" content="no-cache")
    meta(http-equiv="Expires" content="0")

    
    block css
    
    
  body
    
    <!--[if lt IE 8]><a href="http://browsehappy.com/", target="_blank"> 请升级浏览器</a><![endif]--> 
    mixin if-ie(condition, showInNonIeBrowser)
      - if(showInNonIeBrowser == null) showInNonIeBrowser = condition == "!IE";
      != "<!--[if " + condition + "]>"
      if showInNonIeBrowser
        != "-->"
      block
      if showInNonIeBrowser
        != "<!--"
      != "<![endif]-->"

  
    block script

    block footer
